{
  "exclude": [
    "node_modules",
    "build",
    "jest.config.js"
  ],
  "include": [
    "src/*",
    "src/apispec/api.json"
  ],
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "build",
    "rootDir": "./src",
    // prevents this tsconfig from compiling any files
    "target": "ES2022",
    "module": "commonjs",
    "types": [
      "node",
      "jest"
    ],
    "lib": [
      "ES2022"
    ],
    "importHelpers": true,
    "declaration": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "strict": true,
    "alwaysStrict": true,
    "resolveJsonModule": true,
    // Needed for CommonJS modules
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "esModuleInterop": true
  }
}
